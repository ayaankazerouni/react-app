};

function randomLlama(llamas) {

  var index = Math.floor((Math.random() * llamas.length));
  return llamas[index];
}

function seedVote(llama, name, email) {
  var vote = new Vote({
    name: name,
    email: email,
    vote: llama
  });
  vote.save((err, vote) => {
    if (err) console.error(err);
    console.log(vote);
  });
}

seed();
